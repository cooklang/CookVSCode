{
	"name": "cook",
	"displayName": "Cooklang",
	"description": "Language support for Cooklang recipe files",
	"version": "0.4.1",
	"publisher": "dubadub",
	"repository": "https://github.com/cooklang/CookVSCode",
	"icon": "cooklang.png",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:cooklang"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configurationDefaults": {
			"[cooklang]": {
				"editor.wordWrap": "on",
				"editor.quickSuggestions": true
			}
		},
		"configuration": {
			"type": "object",
			"title": "Cooklang",
			"properties": {
				"cooklang.serverPath": {
					"type": "string",
					"default": "cook",
					"description": "Path to the cook executable. Defaults to 'cook' in PATH."
				},
				"cooklang.trace.server": {
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "cooklang",
				"aliases": [
					"Cooklang",
					"cooklang"
				],
				"extensions": [
					".cook",
					".menu"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "cooklang",
				"scopeName": "source.cooklang",
				"path": "./syntaxes/cooklang.tmLanguage.json",
				"embeddedLanguages": {
					"meta.embedded.block.yaml": "yaml"
				}
			}
		]
	},
	"__metadata": {
		"installedTimestamp": 1630586468158,
		"id": "3df6b198-3256-4d79-8344-3b498d766939",
		"publisherDisplayName": "Alexey Dubovskoy",
		"publisherId": "3fc161c3-05ad-4d28-bedd-2a525edf0161"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "vsce package"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/vscode": "^1.75.0",
		"typescript": "^5.0.0",
		"vsce": "^2.15.0"
	}
}
